@model Collection
@{
    ViewData["Title"] = "Create";
}
<div class="container-fluid " style="border:1px solid darkgrey;">
    <h2 class="mt-4">Create a new Collection section</h2>
    <form method="post" class="mt-4">
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Collection Name</label>
            <input asp-for="@Model.Name" style="border:1px solid darkgrey;" class="form-control">
            <span class="text-danger text" asp-validation-for="@Model.Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Image" class="form-label">Collection Image URL</label>
            <input asp-for="@Model.Image" style="border:1px solid darkgrey;" class="form-control">
            <span class="text-danger text" asp-validation-for="@Model.Image"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

