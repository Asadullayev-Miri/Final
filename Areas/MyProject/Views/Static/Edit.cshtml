@{
    ViewData["Title"] = "Edit";
}
@model Static
<div class="container-fluid " style="border:1px solid darkgrey;">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    <h2 class="mt-4">Make a change in Static section</h2>
    <form method="post" class="mt-4">
        <div class="mb-3" style="border-top: 1px solid black; padding: 16px 11px;">
            <img style="width:200px;margin:auto; display:block;" src="@Model.Logo" alt="blog img" /><br />
