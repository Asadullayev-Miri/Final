        <div class="mb-3" style="border-top: 1px solid black; padding: 16px 11px;">
            <img style="width:200px;margin:auto; display:block;" src="@Model.BannerImage" alt="blog img" /><br />
            <label asp-for="@Model.BannerImage" class="form-label"><strong>Banner Image</strong></label>
            <input asp-for="@Model.BannerImage" style="border:1px solid darkgrey;" type="text" class="form-control">
            <span class="text-danger text" asp-validation-for="@Model.BannerImage"></span>
