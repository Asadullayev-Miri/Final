            <span class="text-danger text" asp-validation-for="@Model.Article1"></span>
        </div>
        <div class="mb-3" style="border-top: 1px solid black; padding: 16px 11px;">
            <label asp-for="@Model.Article2" class="form-label"><strong>Second Article</strong></label>
