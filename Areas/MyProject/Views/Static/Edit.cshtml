            <input asp-for="@Model.Logo" style="border:1px solid darkgrey;" type="text" class="form-control">
            <span class="text-danger text" asp-validation-for="@Model.Logo"></span>
        </div>
        <div class="mb-3" style="border-top: 1px solid black; padding: 16px 11px;">
            <img style="width:200px;margin:auto; display:block;" src="@Model.SpecialOffer1" alt="blog img" /><br />
            <label asp-for="@Model.SpecialOffer1" class="form-label"><strong>Special Offer First Image URL</strong></label>
            <input asp-for="@Model.SpecialOffer1" style="border:1px solid darkgrey;" type="text" class="form-control">
            <span class="text-danger text" asp-validation-for="@Model.SpecialOffer1"></span>
        </div>
        <div class="mb-3" style="border-top: 1px solid black; padding: 16px 11px;">
            <img style="width:200px;margin:auto; display:block;" src="@Model.SpecialOffer2" alt="blog img" /><br />
