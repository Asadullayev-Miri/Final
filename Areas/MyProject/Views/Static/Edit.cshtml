            <input asp-for="@Model.SpecialOffer2" style="border:1px solid darkgrey;" type="text" class="form-control">
            <span class="text-danger text" asp-validation-for="@Model.SpecialOffer2"></span>
        </div>
        <div class="mb-3" style="border-top: 1px solid black; padding: 16px 11px;">
            <label asp-for="@Model.Article1" class="form-label"><strong>First Article</strong></label>
